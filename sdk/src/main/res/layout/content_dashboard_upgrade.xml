<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.ReviewCheckoutActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_upgrade_plus">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/banner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/logo_ottocash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <!-- <include
                     layout="@layout/partial_bill_payment" />
 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:text="@string/upgrade_ottocash_plus"
                    android:textAppearance="@style/BarlowRegular"
                    android:textColor="#2A6EAF"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="74dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_blue"
                    android:padding="10dp"
                    android:text="@string/hai_kamu_akan_upgrade_ke_ottocash_plus_berikut_keuntungan_yang_akan_kamu_dapatkan_dengan_upgrade_ke_ottocash_plus"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="124dp"
                            android:layout_margin="10dp"
                            card_view:cardElevation="0.6dp"
                            card_view:cardMaxElevation="0.6dp"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardCornerRadius="4dp">

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_toLeftOf="@+id/img_icon"
                            android:layout_margin="10dp"
                            android:translationZ="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="159dp"
                                android:layout_height="37dp"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:textColor="#0E314E"
                                fontPath="fonts/SemiBold.otf"
                                android:textSize="14dp"
                                android:text="@string/transfer_ke_sesama_ottocash" />

                            <TextView
                                android:layout_width="173dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="8dp"
                                android:maxLines="4"
                                fontPath="fonts/Regular.otf"
                                android:textSize="10dp"
                                android:text="@string/ajak" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_icon"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:translationZ="5dp"
                            android:src="@drawable/icon_transfer_sesama" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="124dp"
                            android:layout_margin="10dp"
                            card_view:cardElevation="0.6dp"
                            card_view:cardMaxElevation="0.6dp"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardCornerRadius="4dp">

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:translationZ="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="136dp"
                                android:layout_height="43dp"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:textColor="#0E314E"
                                fontPath="fonts/SemiBold.otf"
                                android:textSize="14dp"
                                android:text="@string/tarik_tunai_dari_saldo_e_money" />

                            <TextView
                                android:layout_width="173dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="8dp"
                                android:maxLines="4"
                                fontPath="fonts/Regular.otf"
                                android:textSize="10dp"
                                android:text="@string/ajak" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:translationZ="5dp"
                            android:src="@drawable/image_tarik_tunai" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="124dp"
                            android:layout_margin="10dp"
                            card_view:cardElevation="0.6dp"
                            card_view:cardMaxElevation="0.6dp"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardCornerRadius="4dp">

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:translationZ="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="136dp"
                                android:layout_height="43dp"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:textColor="#0E314E"
                                fontPath="fonts/SemiBold.otf"
                                android:textSize="14dp"
                                android:text="@string/tarik_tunai_dari_saldo_e_money" />

                            <TextView
                                android:layout_width="173dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="8dp"
                                android:maxLines="4"
                                fontPath="fonts/Regular.otf"
                                android:textSize="10dp"
                                android:text="@string/ajak" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:translationZ="5dp"
                            android:src="@drawable/icon_transfer_rekening" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_nanti_saja"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="159dp"
                    android:layout_height="50dp"
                    android:text="@string/nanti_saja"
                    android:layout_marginLeft="20dp"
                    android:textColor="#CF4A54"
                    android:background="@drawable/bg_nanti_saja"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix" />

                    <Button
                        android:id="@+id/btn_next_upgrade"
                        fontPath="fonts/SemiBold.otf"
                        android:layout_width="159dp"
                        android:layout_height="50dp"
                        android:text="@string/lanjut_upgrade"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:background="#CF4A54"
                        android:textAllCaps="false"
                        tools:ignore="MissingPrefix" />


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
