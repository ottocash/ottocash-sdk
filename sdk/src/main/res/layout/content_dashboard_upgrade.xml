<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.payment.ReviewCheckoutActivity"
    tools:showIn="@layout/activity_introduction_upgrade">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:orientation="vertical">

           <LinearLayout
               android:id="@+id/parent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <RelativeLayout
                   android:id="@+id/banner_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">


                   <LinearLayout
                       android:id="@+id/logo_ottocash"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:layout_marginTop="40dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="31dp"
                           android:text="@string/upgrade_ottocash_plus"
                           android:textAppearance="@style/BarlowRegular"
                           android:textColor="#2A6EAF"
                           android:textSize="22dp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="74dp"
                           android:layout_marginStart="20dp"
                           android:layout_marginTop="50dp"
                           android:layout_marginEnd="20dp"
                           android:background="@drawable/bg_blue"
                           android:padding="10dp"
                           android:text="@string/hai_kamu_akan_upgrade_ke_ottocash_plus_berikut_keuntungan_yang_akan_kamu_dapatkan_dengan_upgrade_ke_ottocash_plus"
                           android:textColor="@color/white"
                           android:textSize="12sp" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           tools:ignore="MissingPrefix">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="160dp"
                               android:paddingLeft="10dp"
                               android:paddingTop="10dp"
                               android:paddingRight="10dp">

                               <androidx.cardview.widget.CardView
                                   android:layout_width="match_parent"
                                   android:layout_height="124dp"
                                   android:layout_gravity="center"
                                   android:layout_margin="10dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="0.6dp"
                                   app:cardMaxElevation="0.6dp"
                                   app:cardUseCompatPadding="true">

                               </androidx.cardview.widget.CardView>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="10dp"
                                   android:layout_toLeftOf="@+id/img_icon"
                                   android:orientation="vertical"
                                   android:padding="10dp"
                                   android:translationZ="10dp">

                                   <TextView
                                       style="@style/RobotoBold"
                                       android:layout_width="159dp"
                                       android:layout_height="37dp"
                                       android:layout_marginTop="5dp"
                                       android:maxLines="2"
                                       android:text="@string/transfer_ke_sesama_ottocash"
                                       android:textColor="#0E314E"
                                       android:textSize="14dp" />

                                   <TextView
                                       android:textAppearance="@style/RobotoMedium"
                                       android:layout_width="173dp"
                                       android:layout_height="24dp"
                                       android:layout_marginTop="8dp"
                                       android:maxLines="4"
                                       android:text="@string/ajak"
                                       android:textColor="#6B6A6A"
                                       android:textSize="10dp" />

                               </LinearLayout>

                               <ImageView
                                   android:id="@+id/img_icon"
                                   android:layout_width="120dp"
                                   android:layout_height="120dp"
                                   android:layout_alignParentTop="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_marginRight="15dp"
                                   android:scaleType="fitXY"
                                   android:src="@drawable/icon_transfer_sesama"
                                   android:translationZ="5dp" />

                           </RelativeLayout>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           tools:ignore="MissingPrefix">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="160dp"
                               android:paddingLeft="10dp"
                               android:paddingRight="10dp">

                               <androidx.cardview.widget.CardView
                                   android:layout_width="match_parent"
                                   android:layout_height="124dp"
                                   android:layout_gravity="center"
                                   android:layout_margin="10dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="0.6dp"
                                   app:cardMaxElevation="0.6dp"
                                   app:cardUseCompatPadding="true">

                               </androidx.cardview.widget.CardView>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="10dp"
                                   android:orientation="vertical"
                                   android:padding="10dp"
                                   android:translationZ="10dp">

                                   <TextView
                                       style="@style/RobotoBold"
                                       android:layout_width="136dp"
                                       android:layout_height="43dp"
                                       android:layout_marginTop="5dp"
                                       android:maxLines="2"
                                       android:text="@string/tarik_tunai_dari_saldo_e_money"
                                       android:textColor="#0E314E"
                                       android:textSize="14dp" />

                                   <TextView
                                       android:textAppearance="@style/RobotoMedium"
                                       android:layout_width="173dp"
                                       android:layout_height="24dp"
                                       android:layout_marginTop="8dp"
                                       android:maxLines="4"
                                       android:text="@string/ajak"
                                       android:textColor="#6B6A6A"
                                       android:textSize="10dp" />

                               </LinearLayout>

                               <ImageView
                                   android:layout_width="120dp"
                                   android:layout_height="120dp"
                                   android:layout_alignParentTop="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_marginRight="15dp"
                                   android:scaleType="fitXY"
                                   android:src="@drawable/image_tarik_tunai"
                                   android:translationZ="5dp" />

                           </RelativeLayout>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           tools:ignore="MissingPrefix">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="160dp"
                               android:paddingLeft="10dp"
                               android:paddingRight="10dp">

                               <androidx.cardview.widget.CardView
                                   android:layout_width="match_parent"
                                   android:layout_height="124dp"
                                   android:layout_gravity="center"
                                   android:layout_margin="10dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="0.6dp"
                                   app:cardMaxElevation="0.6dp"
                                   app:cardUseCompatPadding="true">

                               </androidx.cardview.widget.CardView>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="10dp"
                                   android:orientation="vertical"
                                   android:padding="10dp"
                                   android:translationZ="10dp">

                                   <TextView
                                       style="@style/RobotoBold"
                                       android:layout_width="136dp"
                                       android:layout_height="43dp"
                                       android:layout_marginTop="5dp"
                                       android:maxLines="2"
                                       android:text="@string/transfer_ke_rekening_bank_kamu"
                                       android:textColor="#0E314E"
                                       android:textSize="14dp" />

                                   <TextView
                                       android:textAppearance="@style/RobotoMedium"
                                       android:layout_width="173dp"
                                       android:layout_height="24dp"
                                       android:layout_marginTop="8dp"
                                       android:maxLines="4"
                                       android:text="@string/ajak"
                                       android:textColor="#6B6A6A"
                                       android:textSize="10dp" />

                               </LinearLayout>

                               <ImageView
                                   android:layout_width="120dp"
                                   android:layout_height="120dp"
                                   android:layout_alignParentTop="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_marginRight="15dp"
                                   android:scaleType="fitXY"
                                   android:src="@drawable/icon_transfer_rekening"
                                   android:translationZ="5dp" />

                           </RelativeLayout>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="10dp"
                           android:orientation="horizontal">

                           <Button
                               android:id="@+id/btn_nanti_saja"
                               android:textAppearance="@style/RobotoMedium"
                               android:layout_width="wrap_content"
                               android:layout_height="50dp"
                               android:layout_marginLeft="10dp"
                               android:background="@drawable/bg_nanti_saja"
                               android:text="@string/nanti_saja"
                               android:textAllCaps="false"
                               android:textColor="#CF4A54"
                               tools:ignore="MissingPrefix" />

                           <Button
                               android:id="@+id/btn_next_upgrade"
                               android:layout_width="wrap_content"
                               android:layout_height="50dp"
                               android:layout_marginLeft="10dp"
                               android:layout_weight="1"
                               android:background="#CF4A54"
                               android:src="@drawable/bg_nanti_saja"
                               android:text="@string/lanjut_upgrade"
                               android:textAllCaps="false"
                               android:textColor="@color/white" />


                       </LinearLayout>


                   </LinearLayout>
               </RelativeLayout>

           </LinearLayout>


       </LinearLayout>


    </ScrollView>

</LinearLayout>
