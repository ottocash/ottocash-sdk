<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.topup.TopUpActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_top_up">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/banner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_header" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_header"
                    android:scaleX="-1" />

                <LinearLayout
                    android:id="@+id/logo_ottocash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/via_atm"
                        android:textAppearance="@style/BarlowRegular"
                        android:textColor="@color/Black_484848"
                        android:textSize="10sp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAtm1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_1"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_2"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_3"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_4"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_5"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_6"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAtm7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/atm_7"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/via_mbanking"
                        android:textAppearance="@style/BarlowRegular"
                        android:textColor="@color/Black_484848"
                        android:textSize="10sp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMbank1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_1"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_2"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_3"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_4"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_5"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_6"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvMbank7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="10dp"
                                android:padding="10dp"
                                android:text="@string/mbank_7"
                                android:textAppearance="@style/BarlowRegular"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/Blue_1f204c"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textAppearance="@style/RobotoBold"
            android:textColor="@color/White_ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
