<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.otto.PaymentReceiptOttoActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_payment_receipt_otto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="6dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lyTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_receipt"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTransactionTujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer ke Pedro"
                        android:textAppearance="@style/BarlowSemiBold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvTransactionAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 125.000"
                        android:textAppearance="@style/BarlowSemiBold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTransactionIdTujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="ID Tujuan : Pedro (081318181818)"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvTransactionPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pelanggan : Slamet Wibisono"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyTransaction"
                android:background="@color/Grey_EFEFEF"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="12 September 2018 / 15:30 WIB" />

                <TextView
                    android:id="@+id/tvTransactionID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTransactionDate"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="ID Transaksi : TR012-224-BCD231-180519" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly2"
                android:background="@color/color_white">

                <RelativeLayout
                    android:id="@+id/amountTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/tv_harga_paket"
                        android:maxLines="2"
                        android:text="Jumlah Transfer"
                        android:textColor="@color/Black_484848"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTransactionAmount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Rp 125.000"
                        android:textColor="@color/Black_484848"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/feeTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amountTransaction"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tv_admin_fee"
                        android:maxLines="2"
                        android:text="Biaya Layanan"
                        android:textColor="@color/Black_484848"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTransactionAdminFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Rp. 0"
                        android:textColor="@color/Black_484848"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/feeTransaction"
                    android:background="@color/Grey_e5e5e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewTransaction"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvTransactionTotal"
                        android:maxLines="2"
                        android:text="Total Transfer"
                        android:textAppearance="@style/BarlowSemiBold"
                        android:textColor="@color/Blue_1f204c"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTransactionTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Rp. 125.000"
                        android:textAppearance="@style/BarlowSemiBold"
                        android:textColor="@color/Blue_4EA9F8"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_weight="5"
            android:background="@drawable/rounded_blue"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ic_share"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/Blue_1f204c"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="5"
            android:background="@color/Blue_1f204c"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ic_download"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>