<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.ReviewCheckoutActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_upgrade_next">


    <Button
        android:id="@+id/btn_lanj"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_above="@+id/tct"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_lanjut_upgrade"
        android:text="@string/lanjut_upgrade2"
        android:textAllCaps="false"
        android:textColor="#2A6EAF"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CF4A54"
        android:text="@string/foto_ktp_sekarang"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="MissingPrefix" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="47dp"
        android:text="@string/upgrade_ottocash_plus"
        android:textAppearance="@style/BarlowRegular"
        android:textColor="#2A6EAF"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/tct"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_above="@id/btnSubmit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_blue"
        android:padding="10dp"
        android:text="@string/cara_upgrade_ottocash_plus_sangat_mudah_pertama_cukup_foto_ktp_kamu_dan_melakukan_selfie_dan_membawa_ktp_dengan_handphone_mu"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>
