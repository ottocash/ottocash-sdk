<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:showIn="@layout/dialog_preview_foto_ktp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/upgrade_ottocash_plus"
                    android:textAppearance="@style/BarlowRegular"
                    android:textColor="#2A6EAF"
                    android:textSize="22dp" />


                <LinearLayout
                    android:id="@+id/ll_capture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="#EBF6FE"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bg_lanjut_upgrade" />

                </LinearLayout>


                <Button
                    android:id="@+id/btnSubmit"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_capture"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="#CF4A54"
                    android:text="Foto Selfie Sekarang"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/btnFotoUlang"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnSubmit"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_nanti_saja"
                    android:text="@string/data_belum_sesuai"
                    android:textAllCaps="false"
                    android:textColor=" #CF4A54"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/btnBatal"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnFotoUlang"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_nanti_saja"
                    android:text="@string/batalkan_dan_kembali_ke_menu_utama"
                    android:textAllCaps="false"
                    android:textColor=" #CF4A54"
                    tools:ignore="MissingPrefix" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


