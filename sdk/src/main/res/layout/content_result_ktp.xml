<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.ReviewCheckoutActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_ktpresult_view">

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:text="@string/upgrade_ottocash_plus"
        android:textAppearance="@style/BarlowRegular"
        android:textColor="#2A6EAF"
        android:textSize="22dp" />



    <LinearLayout
        android:id="@+id/ll_capture"
        android:layout_width="285dp"
        android:layout_height="329dp"
        android:layout_below="@+id/tv_plus"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:background="#EBF6FE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="285dp"
            android:layout_height="329dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/bg_lanjut_upgrade"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_fotoKTP"
        fontPath="fonts/SemiBold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CF4A54"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/ll_capture"
        android:text="@string/foto_ktp_sekarang"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btn_data_belum_sesuai"
        fontPath="fonts/SemiBold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/btn_fotoKTP"
        android:text="@string/data_belum_sesuai"
        android:textAllCaps="false"
        android:textColor=" #CF4A54"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btn_batalkan"
        fontPath="fonts/SemiBold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/btn_data_belum_sesuai"
        android:text="@string/batalkan_dan_kembali_ke_menu_utama"
        android:textAllCaps="false"
        android:textColor=" #CF4A54"
        tools:ignore="MissingPrefix" />

</RelativeLayout>
