<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.otto.PaymentSuccessOttoActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_payment_success_otto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_success" />

            <TextView
                android:id="@+id/tvTitleReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/transfer_berhasil"
                android:textAppearance="@style/RobotoRegular"
                android:textColor="@color/Black_484848"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescTitleReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="@string/desc_title_receipt"
                android:textAppearance="@style/RobotoRegular"
                android:textColor="@color/Grey_8b8b8b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTitlePaymentReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="@string/total_transfer"
                android:textAppearance="@style/BarlowRegular"
                android:textColor="@color/Blue_1f204c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPaymentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Rp 0"
                android:textAppearance="@style/BarlowRegular"
                android:textColor="@color/Grey_8b8b8b"
                android:textSize="30sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyDetailTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_double_strip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="BUKTI BAYAR DAN DETAIL TRANSAKSI"
            android:textColor="@color/Black_484848"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>