<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.payment.QR.PayWithQr"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_pay_with_qr">

    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/scann"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:borderColor="@android:color/transparent"
        app:maskColor="@android:color/transparent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/img_subtract" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Scan kode QR untuk melakukan pembayaran"
        android:textAlignment="center"
        android:textAppearance="@style/RobotoMedium"
        android:textColor="@color/White_ffffff"
        android:textSize="14sp" />

</RelativeLayout>